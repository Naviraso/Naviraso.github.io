{
  "name": "02_webapplications",
  "version": "1.0.0",
  "description": "A Node.js server project with Express and Playwright testing",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "show-report": "playwright show-report",
    "test:unit": "jest",
    "lint": "eslint .",
    "build": "npm run build:client && npm run build:server"
  },
  "keywords": [
    "nodejs",
    "express",
    "server",
    "api",
    "playwright"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "morgan": "^1.10.1",
    "playwright": "^1.54.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
